{
  "manifest_version": 2,
  "name": "CobiNewTab",
  "version": "1.0",

  "description": "Allows the user to set a different website as page to be opened as new tab",

  "chrome_url_overrides" : {
    "newtab": "newtab.html"
  },
  
  "applications": {
    "gecko": {
      "id": "cobinewtab@cobinja.de",
      "strict_min_version": "57.0"
    }
  },
  
  "options_ui": {
    "page": "options.html"
  },
  
  "browser_action": {
    "browser_style": false
  },

  "permissions": [
    "history",
    "storage",
    "tabs"
  ]
}
